{
  "name": "renovation-planner",
  "version": "1.0.0",
  "description": "Умный цифровой сервис для планирования перепланировки квартир",
  "main": "electron/main.js",
  "author": "Renovation Planner Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "node electron/build-backend.js",
    "prebuild": "npm run build:frontend && npm run build:backend",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder -mw",
    "pack": "electron-builder --dir",
    "dist": "npm run prebuild && npm run build:all"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-serve": "^1.3.0",
    "fix-path": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.renovationplanner.app",
    "productName": "Планировщик Ремонта",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/.venv",
      "!backend/venv"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*", "!__pycache__", "!*.pyc", "!.venv", "!venv"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Планировщик Ремонта",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "language": "1049"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "background": "build/background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Office",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
